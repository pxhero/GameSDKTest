<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ranking_list_gameImage"
            android:layout_marginBottom="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/temple_run"
            android:scaleType="centerCrop"
            android:background="#F00"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ranking_list_game_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#111111"
                android:text="诛仙青云志"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/ranking_list_activity_des_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:textColor="#888888"
                android:text="新版“一念乾坤”10月25日公测，重磅福利玩转诛仙"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/ranking_list_game_des_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:textColor="#888888"
                android:text="角色扮演/253M"
                android:singleLine="true"
                android:ellipsize="end"/>

        </LinearLayout>

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/ranking_list_game_download_btn"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:text="下载"
            android:textSize="13sp"
            android:textColor="#FFF"
            android:background="@drawable/new_game_watch_button" />

    </LinearLayout>

    <View
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#dddddd"/>

</LinearLayout>