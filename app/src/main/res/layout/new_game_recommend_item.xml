<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/newRecGameImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/temple_run"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/newGameNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="诛仙青云传"
        android:textSize="13sp"
        android:textColor="#111111"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/newGameTypeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="说志"
        android:textSize="13sp"
        android:textColor="#111111"
        android:layout_marginTop="5dp"/>
    
    <TextView
        android:id="@+id/newGameDesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="角色扮演/999M"
        android:textSize="10sp"
        android:textColor="#888888"/>
    
    <Button
        android:id="@+id/downloadGameBtn"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:text="下载"
        android:background="@drawable/new_game_watch_button"
        android:textSize="13sp"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"
        />

</LinearLayout>